      <div class="faqs-top-grids">
        <!--single-page-->
        <div class="single-page">
            <div class="col-md-8 single-gd-lt">
        
              <div class="flexslider">
                      
              <div class="flex-viewport" style="overflow: hidden; position: relative;">


                <ul class="slides" style="width: 4200%; transition-duration: 0s; transform: translate3d(-559px, 0px, 0px);">
                    <li data-thumb="images/products/{{hot.Media.image.name}}" class="clone" style="width: 559px; float: left;max-height:500px; display: block;">
                          <img src="images/products/{{hot.Media.image.name}}" alt="">
                        </li>
{%  for  images in hot.images %}
{% if images.url != '' %}
              	<li data-thumb="uploads/brochures/{{images.url}}" class="clone" style="width: 559px; float: left; display: block;max-height:100px;">
                          <img style="max-height:500px;"src="uploads/brochures/{{images.url}}" alt="">
                        </li>
         {% endif %}
           {% endfor %}
                    </ul>
                </div>



                <ul class="flex-direction-nav">
