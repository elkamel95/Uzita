        <p> <h4>Adresse:</h4>{{hot.hotel.adresse}}</p>

                       {% endif %}
                   <p><b><i>{{hot.descrip}}</i></b></p>

                {% if hot.voyage != null %}



               {% if hot.voyage.circuit == null %}
                  {% if hot.voyage.transfert != null %}
                <table border="2" style="width: 100%;">
                    <thead>
                      <tr>
                      <th>Jour</th>

                        <th>Itinéraire</th>
                        <th>Horaire</th>
                        <th>Visite</th>

                      </tr>
                    </thead>
                    <tbody>
                       {% set day = 0%} 

                     {% for voyage in hot.voyage.joure %}

                      <tr>
                       <td> {% set  day = day + 1  %} {{day}} </td>

                        <td>{{voyage.details.ltineaire}}</td>
                        <td>{{voyage.details.horaire}}</td>
                        <td>{{voyage.details.Destination}}</td>

                      </tr>
                                                      {% endfor %}

                    </tbody>
                  </table>


                   


{% endif %}







           
                                {% endif %}


      {% for voyage in hot.voyage.joure %}



<h4>{{ voyage.titre }}</h4>

<p>{{ voyage.description }}</p>

                                                      {% endfor %}
                {% endif %}
                                  {% if hot.voyage != null %}

                  {% if hot.voyage.circuit != null %}

<h4>prix incluant</h4>
<p>{{ hot.voyage.circuit.prixIncluant }}</p>
<h4>prix n'incluant pas </h4>
<p>{{ hot.voyage.circuit.prixNincusPas }}</p>


                {% endif %}
         
{% endif %} 

              </div>
            </div>

            <div class="col-md-4 single-gd-rt">
              <div class="spl-btn">
                <div class="spl-btn-bor">
                  <a href="#">
                    <span class="glyphicon glyphicon-tag" aria-hidden="true"></span>                      
                  </a>
                  <p>Offre spéciale
</p>  
                  <script>
                    $(document).ready(function(){
                    $('[data-toggle="tooltip"]').tooltip();   
                    });
                  </script>
                </div>
                <div class="sp-bor-btn text-right">
                  <h4>

{% if hot.promo.promo != 'NON' %}

                  	<span>${{hot.pix}}</span> 
                ${{hot.pix-((hot.promo.promo * hot.pix) / 100) }}
                {% else %}
{{hot.pix}}DT

{% endif %}




              </h4>
                  <p class="best-pri">Best price</p>
               <button id="show" class="btn btn-success" style="
    width: 100%;
    height: 10%;
" >  <h3 style="color: aliceblue;">Réserver</h3></button>
                </div>
              </div>

              <div class="other-comments">
                <div class="comments-head">
                  <h3>Déscription</h3>
                  <div class="clearfix"></div>
                </div>
                <div class="comments-bot">
                  <p>{{hot.shortdesc}}</p>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
        </div>
     </div>

       <div id="reservationShow" onclick = "Geeks({{hot.id}})" style="display: none;">   
                 <div class="container">
                                          <button id="hide" class="btn btn-danger" style="
    margin-left: 83%;
