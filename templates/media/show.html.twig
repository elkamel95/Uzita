{% extends 'base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}
    <h1>Media</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medium.id }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ medium.updatedAt ? medium.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image.name</th>
                <td>{{ medium.image.name }}</td>
            </tr>
            <tr>
                <th>Image.originalName</th>
                <td>{{ medium.image.originalName }}</td>
            </tr>
            <tr>
                <th>Image.mimeType</th>
                <td>{{ medium.image.mimeType }}</td>
            </tr>
            <tr>
                <th>Image.size</th>
                <td>{{ medium.image.size }}</td>
            </tr>
            <tr>
                <th>Image.dimensions</th>
                <td>{{ medium.image.dimensions }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('media_index') }}">back to list</a>

    <a href="{{ path('media_edit', {'id': medium.id}) }}">edit</a>

    {{ include('media/_delete_form.html.twig') }}
{% endblock %}
