{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pix</th>
                <th>Shortdesc</th>
                <th>Descrip</th>
                <th>Dest</th>
                <th>Datedep</th>
                <th>Datearriv</th>
                <th>Datecreat</th>
                <th>Datemodif</th>
                <th>Titre</th>
                <th>TopDistination</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.pix }}</td>
                <td>{{ article.shortdesc }}</td>
                <td>{{ article.descrip }}</td>
                <td>{{ article.dest }}</td>
                <td>{{ article.datedep ? article.datedep|date('Y-m-d') : '' }}</td>
                <td>{{ article.datearriv ? article.datearriv|date('Y-m-d') : '' }}</td>
                <td>{{ article.datecreat ? article.datecreat|date('Y-m-d') : '' }}</td>
                <td>{{ article.datemodif ? article.datemodif|date('Y-m-d') : '' }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.topDistination ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
